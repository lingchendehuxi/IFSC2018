<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:scaleType="centerCrop"
        android:src="@drawable/connect_back_bg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="24dp"
        android:drawableLeft="@drawable/business_cooperation"
        android:drawablePadding="9dp"
        android:drawableTint="@color/black_login_text"
        android:text="@string/business_cooperation"
        android:textColor="@color/business_color"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="24dp"
        android:autoLink="all"
        android:text="@string/tel_number"
        android:textColor="@color/business_text_color"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="24dp"
        android:text="@string/settings_contact_text_fax"
        android:textColor="@color/business_text_color"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="24dp"
        android:autoLink="all"
        android:text="@string/settings_contact_text_mail"
        android:textColor="@color/business_text_color"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="24dp"
        android:text="@string/settings_contact_text_wx"
        android:textColor="@color/business_text_color"
        android:textSize="14sp" />
</LinearLayout>