<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#E7E7E7"
    android:layout_height="match_parent">

    <include layout="@layout/title"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="24dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/layout_margin"
            android:addStatesFromChildren="true"
            android:background="@drawable/bg_login_selected"
            android:layout_height="46dp">

            <com.android.incongress.cd.conference.widget.ClearEditText
                android:id="@+id/cet_confirm_code"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:background="@null"
                android:maxLength="16"
                android:hint="Password"
                android:padding="6dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/layout_margin"
            android:layout_height="wrap_content">
            <com.android.incongress.cd.conference.widget.ClearEditText
                android:id="@+id/cet_given_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="@string/given_name"
                android:background="@drawable/bg_login_selected"
                android:padding="6dp"
                android:layout_height="46dp" />

            <com.android.incongress.cd.conference.widget.ClearEditText
                android:id="@+id/cet_family_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/layout_margin"
                android:hint="Family Name"
                android:background="@drawable/bg_login_selected"
                android:padding="6dp"
                android:layout_height="46dp" />
        </LinearLayout>

        <Button
            android:text="@string/register_title"
            android:id="@+id/bt_register"
            android:layout_width="match_parent"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_button_ed"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large"
            android:layout_height="46dp" />
    </LinearLayout>


</LinearLayout>