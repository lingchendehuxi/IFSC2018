<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="@dimen/system_title_and_size"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="@dimen/system_title_size">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/margin_20"
        android:background="@drawable/title_seach_border"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/search"
            android:tint="@color/back_color" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="@dimen/margin_20"
            android:background="@null"
            android:hint="@string/seach_title_hint"
            android:textColorHint="@color/grap_color"
            android:textSize="16sp"
            android:singleLine="true"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:textSize="@dimen/text_20"
        android:text="取消" />

</LinearLayout>
