<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners"
        android:clickable="true"
        android:paddingBottom="10dp"
        android:paddingLeft="29dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/head_img"
            android:textColor="@color/black_login_text"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_next1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/me_next" />

        <com.android.incongress.cd.conference.widget.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="22dp"
            android:layout_toLeftOf="@id/iv_next1"
            android:src="@drawable/professor_default" />

    </RelativeLayout>

    <View style="@style/edite_line" />

    <RelativeLayout
        android:id="@+id/rl_name"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@drawable/rounded_corners"
        android:clickable="true"
        android:paddingLeft="29dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/user_name"
            android:textColor="@color/black_login_text"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_next2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/me_next" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="22dp"
            android:layout_toLeftOf="@id/iv_next2"
            android:text="@string/home_setting"
            android:textColor="@color/unselect_color"
            android:textSize="14sp" />

    </RelativeLayout>

    <View style="@style/edite_line" />

    <RelativeLayout
        android:id="@+id/rl_mobile"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@drawable/rounded_corners"
        android:clickable="true"
        android:paddingLeft="29dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/mobile"
            android:textColor="@color/black_login_text"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_next3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/me_next" />

        <TextView
            android:id="@+id/mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="22dp"
            android:layout_toLeftOf="@id/iv_next3"
            android:text="@string/home_setting"
            android:textColor="@color/unselect_color"
            android:textSize="14sp" />

    </RelativeLayout>

    <View style="@style/edite_line" />

    <RelativeLayout
        android:id="@+id/rl_wx_mobile"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@drawable/rounded_corners"
        android:clickable="true"
        android:paddingLeft="29dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/wx_number"
            android:textColor="@color/black_login_text"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_next4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/me_next" />

        <TextView
            android:id="@+id/wx_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="22dp"
            android:layout_toLeftOf="@id/iv_next4"
            android:text="@string/home_setting"
            android:textColor="@color/unselect_color"
            android:textSize="14sp" />

    </RelativeLayout>

    <View style="@style/edite_line" />

</LinearLayout>