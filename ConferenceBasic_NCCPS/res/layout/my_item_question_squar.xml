<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"

    android:orientation="vertical"
    android:paddingTop="18dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <View
            android:layout_width="6dp"
            android:layout_height="14dp"
            android:layout_marginLeft="@dimen/margin_20"
            android:background="@drawable/circle_small_squar"/>
        <TextView
            android:id="@+id/tv_answered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_login_text"
            android:layout_marginLeft="6dp"
            android:textSize="15sp"
            android:text="未回答"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="23dp"
        android:paddingRight="23dp"
        android:layout_marginTop="8dp"
        android:text="这里是需要提问的问题内容这里是需要提问的问题内容这里是需要提问的问题内容这里是需要提问的问题内容这里是需要提问的问题内容"
        android:textColor="@color/black_login_text"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="23dp"
        android:paddingTop="8dp"
        android:paddingRight="23dp"
        android:paddingBottom="8dp"
        android:text="这是提示"
        android:textColor="@color/unselect_color"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="23dp"
        android:paddingRight="23dp">

        <com.android.incongress.cd.conference.widget.CircleImageView
            android:id="@+id/cv_head"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/professor_default" />

        <TextView
            android:id="@+id/tv_question_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:text="张益达"
            android:textColor="@color/black_login_text"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:text="@string/accept_ask"
            android:textColor="@color/unselect_color"
            android:textSize="15sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">
            <TextView
                android:id="@+id/tv_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="立即回答"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/bg_button_ed"
                android:textColor="@color/white"
                android:textSize="15sp"
                />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="15dp"
        android:background="@color/line_color" />

</LinearLayout>