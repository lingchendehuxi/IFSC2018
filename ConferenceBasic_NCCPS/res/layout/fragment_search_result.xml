<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/search_condition_layou"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/session_day"
            android:layout_width="wrap_content"
            android:drawableRight="@drawable/search_delet"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:textColor="@color/white"
            android:background="@color/theme_color"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/session_time"
            android:layout_width="wrap_content"
            android:drawableRight="@drawable/search_delet"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:textColor="@color/white"
            android:background="@color/theme_color"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/session_room"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:drawableRight="@drawable/search_delet"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:background="@color/theme_color"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/tips_results"
        android:layout_below="@id/search_condition_layou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textColor="@color/normal_gray"
        android:text="@string/retrieval_results"
        android:padding="5dp"/>
    <ListView
        android:layout_marginTop="-6dp"
        android:id="@+id/lv_search_result"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent"
        android:divider="@null"
        android:layout_below="@id/tips_results" />

    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_below="@id/title"
        android:visibility="gone"
        android:text="@string/dzbb_no_data"
        android:layout_height="wrap_content" />
</RelativeLayout>