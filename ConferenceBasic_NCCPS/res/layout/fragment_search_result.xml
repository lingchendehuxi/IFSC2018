<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_color">

    <LinearLayout
        android:id="@+id/search_condition_layou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="19dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <android.support.v7.widget.CardView
            android:id="@+id/session_day_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp">

            <TextView
                android:id="@+id/session_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/search_cancel_color"
                android:paddingLeft="19dp"
                android:paddingTop="8dp"
                android:paddingRight="21dp"
                android:paddingBottom="8dp"
                android:textColor="@color/unselect_color" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/search_bg_1"
                    android:tint="@color/theme_color" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/search_bg_2"
                    android:tint="@color/white" />
            </FrameLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/session_time_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="5dp">

            <TextView
                android:id="@+id/session_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/search_cancel_color"
                android:paddingLeft="19dp"
                android:paddingTop="8dp"
                android:paddingRight="21dp"
                android:paddingBottom="8dp"
                android:textColor="@color/unselect_color" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/search_bg_1"
                    android:tint="@color/theme_color" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/search_bg_2"
                    android:tint="@color/white" />
            </FrameLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/session_room_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="5dp">

            <TextView
                android:id="@+id/session_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/search_cancel_color"
                android:paddingLeft="19dp"
                android:paddingTop="8dp"
                android:paddingRight="21dp"
                android:paddingBottom="8dp"
                android:textColor="@color/unselect_color" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/search_bg_1"
                    android:tint="@color/theme_color" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/search_bg_2"
                    android:tint="@color/white" />
            </FrameLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <TextView
        android:id="@+id/tips_results"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_below="@id/search_condition_layou"
        android:gravity="center_vertical"
        android:paddingLeft="21dp"
        android:text="@string/retrieval_results"
        android:textColor="@color/normal_gray"
        android:textSize="15sp" />

    <ListView
        android:id="@+id/lv_search_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tips_results"
        android:scrollbars="none"
        android:divider="@null" />

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerInParent="true"
        android:text="@string/dzbb_no_data"
        android:visibility="gone" />
</RelativeLayout>