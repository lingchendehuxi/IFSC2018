<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/system_title_and_size"
        android:background="@color/action_bar_bg"
        android:orientation="horizontal"
        android:paddingTop="@dimen/system_title_size">

        <LinearLayout
            android:id="@+id/title_back_panel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/title_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:clickable="false"
                android:focusable="false"
                android:scaleType="centerCrop"
                android:src="@drawable/backimg"
                android:tint="@color/back_color" />

            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:gravity="clip_vertical"
                android:text="测试"
                android:textColor="@color/black_login_text"
                android:textSize="17sp" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="17dp"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="@string/save"
            android:textColor="@color/alpha_theme_color"
            android:textSize="14sp" />
    </LinearLayout>

    <View style="@style/edite_line" />

    <com.android.incongress.cd.conference.widget.ClearEditText
        android:id="@+id/et_temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="@dimen/layout_margin"
        android:layout_marginRight="23dp"
        android:background="@drawable/button_unselected"
        android:drawableRight="@drawable/edittext_delete"
        android:hint="@string/true_name"
        android:inputType="text"
        android:padding="@dimen/layout_padding"
        android:textColor="@color/theme_color"
        android:textSize="@dimen/text_size_media" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginTop="-2dp"
        android:layout_marginRight="@dimen/margin_20"
        android:background="@color/alpha_theme_color" />
</LinearLayout>