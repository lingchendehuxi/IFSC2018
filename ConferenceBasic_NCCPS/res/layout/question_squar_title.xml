<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:paddingTop="18dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="23dp"
        android:paddingRight="23dp"
        android:text="这里是需要提问的问题内容这里是需要提问的问题内容这里是需要提问的问题内容这里是需要提问的问题内容这里是需要提问的问题内容"
        android:textColor="@color/black_login_text"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="23dp"
        android:paddingRight="23dp"
        android:paddingTop="8dp"
        android:text="这是提示"
        android:textColor="@color/unselect_color"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="23dp"
        android:paddingRight="23dp">

        <com.android.incongress.cd.conference.widget.CircleImageView
            android:id="@+id/cv_head"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/professor_default" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_question_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张益达"
                android:textColor="@color/black_login_text"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_question_user_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-1-1"
                android:textColor="@color/unselect_color"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="23dp"
            android:text="@string/question_answer"
            android:textColor="@color/unselect_color"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <com.android.incongress.cd.conference.widget.text_view.MySpannableTextView
        android:id="@+id/tv_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="8dp"
        android:paddingLeft="23dp"
        android:paddingRight="23dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/line_color" />

</LinearLayout>