<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/meeting_yy_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#F2F0F3"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/meeting_yy_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="取消"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/meeting_yy_yes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:paddingRight="15dp"
            android:text="确定"
            android:textColor="@color/alpha_theme_color"
            android:textSize="14dp" />
    </LinearLayout>

    <ListView
        android:id="@+id/meeting_yy_list"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/meeting_yy_layout"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:divider="@null" />
</RelativeLayout>