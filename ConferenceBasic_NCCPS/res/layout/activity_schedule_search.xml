<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/search_layout"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:background="@color/theme_color"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">
    <ImageView
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="20dp"
        android:src="@drawable/search"
        android:layout_height="20dp" />
    <ImageView
        android:layout_width="3dp"
        android:background="#ffffff"
        android:layout_height="match_parent" />
    <EditText
        android:layout_marginLeft="8dp"
        android:id="@+id/search_search"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@null"
        android:hint="@string/search_hint"
        android:textColorHint="@color/white"
        android:cursorVisible="false"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="15sp" />
</LinearLayout>
    <LinearLayout
        android:id="@+id/session_sizeLayou"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@id/search_layout"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"
            android:background="@color/gray"/>
        <TextView
            android:text="Session"
            android:layout_marginLeft="10dp"
            android:textColor="@color/normal_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/session_size"
            android:layout_marginRight="10dp"
            android:textColor="@color/alpha_theme_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"
            android:background="@color/gray"/>
    </LinearLayout>
    <ListView
        android:layout_marginTop="5dp"
        android:id="@+id/lv_search_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:layout_below="@id/session_sizeLayou" />
        <LinearLayout
            android:id="@+id/meeting_sizeLayou"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_below="@id/lv_search_result"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"
                android:background="@color/gray"/>
            <TextView
                android:text="Presentation"
                android:layout_marginLeft="10dp"
                android:textColor="@color/normal_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/meeting_size"
                android:layout_marginRight="10dp"
                android:textColor="@color/alpha_theme_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"
                android:background="@color/gray"/>
        </LinearLayout>
        <ListView
            android:layout_marginTop="5dp"
            android:id="@+id/lv_search_meetingresult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:layout_below="@id/meeting_sizeLayou" />
    <TextView
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_tips"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:text="@string/search_no_data"
        android:layout_height="wrap_content" />
    </RelativeLayout>
</ScrollView>