<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.


    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:listDivider">@drawable/divider_bg</item>
    </style>

    <style name="SwitchButton" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/btn_switch</item>
        <item name="android:height">20dp</item>
        <item name="android:width">48dp</item>
    </style>

    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@drawable/loading_dialog_style</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="SimpleDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Activity</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="SimpleProgressDialog" parent="@style/SimpleDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="myTransparent">
        <item name="android:windowBackground">@color/transparents</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>
    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="icon_popup_window">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
    <style name="icon_popup_window_no_down">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <style name="dir_popupwindow_anim">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="popupwindow_anim_alpha">
        <item name="android:windowEnterAnimation">@anim/alpha_in</item>
        <item name="android:windowExitAnimation">@anim/alpha_out</item>
    </style>

    <style name="ChyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_checkbox</item>
    </style>

    <style name="AppBaseTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBaseTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppBaseTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="RadioButton">
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:minHeight">33dp</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>


    <style name="h_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
    </style>

    <style name="v_line">
        <item name="android:layout_width">@dimen/divider_height</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- RadioGroup自定义样式 -->
    <style name="Widget.RadioButtonR" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:background">@drawable/identity_selector</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button_rb" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/text_selector</item>
    </style>

    <style name="splashTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="refresh_progress_style">
        <item name="android:indeterminateDrawable">@anim/rotate_circle</item>
        <item name="android:minWidth">20dip</item>
        <item name="android:maxWidth">20dip</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <style name="NoTitleDialog" parent="Theme.AppCompat.Light.Dialog">
        <!--没有标题-->
        <item name="windowNoTitle">true</item>
        <!--背景透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--是否有覆盖-->
        <item name="android:windowContentOverlay">@null</item>
        <!--是否浮动-->
        <item name="android:windowIsFloating"> true </item>
        <!--边框-->
        <item name="android:windowFrame">@null</item>
        <!--背景：透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--dialog的整个屏幕的背景是否有遮障层-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--动画-->
        <item name="android:windowAnimationStyle"> @style/AnimSlideBottom</item>
    </style>

    <style name="AnimSlideBottom" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/anim_fade_in</item>
        <item name="android:windowExitAnimation">@anim/anim_fade_out</item>
    </style>

    <style name="edite_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxEms">1</item>
        <item name="android:textColor">@color/black_login_text</item>
        <item name="android:textCursorDrawable">@drawable/edite_style</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="edite_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/line_color</item>
    </style>
    <style name="baseTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="home_me_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:drawablePadding">@dimen/margin_20</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">23dp</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:textColor">@color/black_login_text</item>
        <item name="android:textSize">@dimen/text_size_media</item>
    </style>
    <style name="transparentFrameWindowStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/photo_choose_bg</item>
    </style>
    <style name="Widget_GifView" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="popup_footer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/margin_50</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>
    <declare-styleable name="ReadMoreTextView"><attr format="string" name="trimExpandedText"/><attr format="string" name="trimCollapsedText"/><attr format="integer" name="trimLength"/><attr format="boolean" name="showTrimExpandedText"/><attr format="color" name="colorClickableText"/><attr format="integer" name="trimLines"/><attr name="trimMode"><enum name="trimModeLine" value="0"/><enum name="trimModeLength" value="1"/></attr></declare-styleable>


    <!--保利威视-->

    <style name="iv_click_controller_land_top_dm">
        <item name="android:layout_width">@dimen/dmcolor_commom_wh</item>
        <item name="android:layout_height">@dimen/dmcolor_commom_wh</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:translationX">@dimen/dmcolor_commom_tran</item>
        <item name="android:translationY">@dimen/talk_common_margin</item>
    </style>

    <style name="iv_click_controller_land_top">
        <item name="android:layout_width">@dimen/top_layout_height_s</item>
        <item name="android:layout_height">@dimen/top_layout_height_s</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/polyv_commom_click_color_gray</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="iv_click_controller_land_top_l">
        <item name="android:layout_width">@dimen/top_layout_dm_height</item>
        <item name="android:layout_height">@dimen/top_layout_dm_height</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/polyv_commom_click_color_gray</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="iv_click_controller_land_center">
        <item name="android:layout_width">@dimen/center_right_layout_height</item>
        <item name="android:layout_height">@dimen/center_right_layout_height</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="iv_click_controller_land_bottom">
        <item name="android:layout_width">@dimen/bottom_layout_height_l</item>
        <item name="android:layout_height">@dimen/bottom_layout_height_l</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/polyv_commom_click_color_gray</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="tv_click_controller_land_center">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/polyv_bit_text_color</item>
        <item name="android:textSize">@dimen/center_text_size_l</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tv_click_controller_land_center_s">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/polyv_bit_text_color</item>
        <item name="android:textSize">@dimen/center_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tv_click_controller_land_center_s_padding_tb" parent="tv_click_controller_land_center_s">
        <item name="android:paddingTop">@dimen/talk_common_margin</item>
        <item name="android:paddingBottom">@dimen/talk_common_margin</item>
    </style>

    <style name="tv_click_controller_land_center_not_click">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/top_layout_color_white</item>
        <item name="android:textSize">@dimen/center_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tv_click_controller_land_bottom">
        <item name="android:layout_width">@dimen/bottom_layout_height_l</item>
        <item name="android:layout_height">@dimen/bottom_layout_height_l</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">@dimen/center_bottom_margin_left_s</item>
        <item name="android:textColor">@color/polyv_play_bt_color</item>
        <item name="android:textSize">@dimen/bottom_right_text_size</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/polyv_commom_click_color_gray</item>
    </style>

    <style name="iv_click_controller_port_bottom">
        <item name="android:layout_width">@dimen/bottom_layout_height</item>
        <item name="android:layout_height">@dimen/bottom_layout_height</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/polyv_commom_click_color_gray</item>
        <item name="android:scaleType">center</item>
    </style>
    <style name="DefaultFullScreenDialogAnimation" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/DialogIOSAnimation</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>//将背景设置成透明的
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowCloseOnTouchOutside">true</item>//设置窗体外面允不允许点击
    </style>
    <style name="DialogIOSAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/anim_fade_in</item>
        <item name="android:windowExitAnimation">@anim/anim_fade_out</item>
    </style>
    <!--自定义Dialog背景全透明无边框theme-->
    <style name="MyDialog" parent="android:style/Theme.Dialog">
        <!--背景颜色和透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否去除标题-->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

</resources>